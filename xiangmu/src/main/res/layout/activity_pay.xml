<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.PayActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:layout_marginLeft="24dp"
        android:textSize="16sp"
        android:textColor="#666"
        android:text="选择支付方式"/>

    <android.support.v7.widget.CardView
        android:layout_width="312dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                //余额支付
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:placeholderImage="@mipmap/pay_money"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_gravity="center_vertical"
                        android:text="余额支付"/>
                </LinearLayout>//余额支付

                //wx支付
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:placeholderImage="@mipmap/common_icon_weixin"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_gravity="center_vertical"
                        android:text="微信支付"/>
                </LinearLayout>////wx支付

                //支付宝支付
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:placeholderImage="@mipmap/common_icon_zhifubao"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#666"
                        android:layout_gravity="center_vertical"
                        android:text="支付宝支付"/>
                </LinearLayout>//支付宝支付
            </LinearLayout>

            //单选框
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/radio_ye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <RadioButton
                    android:id="@+id/radio_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <RadioButton
                    android:id="@+id/radio_zfb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
            </RadioGroup>//单选框
        </LinearLayout>
    </android.support.v7.widget.CardView>

    //支付按钮
    <Button
        android:id="@+id/btn_pay"
        android:layout_width="312dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:textColor="#fff"
        android:background="@drawable/btnpay__shape"
        android:layout_gravity="center_horizontal"
        android:text="确认支付"/>
</LinearLayout>



    //支付成功布局(默认隐藏)
    <LinearLayout
        android:id="@+id/item_pay_succeed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5e5e5e"
        android:alpha="0.8"
        android:orientation="vertical"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="152dp"
            app:placeholderImage="@mipmap/pay_succeed"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:text="支付成功"/>
        <Button
            android:id="@+id/btn_back_home"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/btnpay__shape"
            android:layout_gravity="center_horizontal"
            android:text="返回主页"/>
        <Button
            android:id="@+id/btn_watch_order"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/btnpay__shape"
            android:layout_gravity="center_horizontal"
            android:text="查看订单"/>
    </LinearLayout>


    //支付失败布局(默认隐藏)
    <LinearLayout
        android:id="@+id/item_pay_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5e5e5e"
        android:alpha="0.8"
        android:orientation="vertical"
        android:visibility="gone">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="152dp"
            app:placeholderImage="@mipmap/pay_error"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:text="支付失败"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:text="暂未开通微信与支付宝支付"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="12sp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:text="请选择余额支付"/>
        <Button
            android:id="@+id/btn_go_pay"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:textColor="#fff"
            android:textSize="14sp"
            android:background="@drawable/btnpay__shape"
            android:layout_gravity="center_horizontal"
            android:text="继续支付"/>

    </LinearLayout>


</RelativeLayout>