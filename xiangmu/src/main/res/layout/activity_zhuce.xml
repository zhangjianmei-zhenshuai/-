<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_register_background"
    tools:context=".ui.activity.ZhuceActivity"
    android:orientation="vertical">

    //手机号  横向布局
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        //小手机的图片
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/register_icon_phone"/>
        //手机号输入框
        <EditText
            android:id="@+id/ed_register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="手机号"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
    </LinearLayout>
    //下划线
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"/>

    //验证码
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        //验证码的图片
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/register_icon_verification"/>
        //验证码输入框
        <EditText
            android:id="@+id/ed_register_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="验证码"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
        //获取验证码
        <TextView
            android:id="@+id/tv_register_yzm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="10sp"
            android:textColor="#fff"
            android:text="获取验证码"/>
    </LinearLayout>
    //下划线
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"/>

    //密码  横向布局
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        //小锁子的图片
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/register_icon_lock"/>
        //登录密码输入框
        <EditText
            android:id="@+id/ed_register_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="登录密码"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:background="@null"/>
        //小眼睛图片
        <ImageView
            android:id="@+id/img_register_eye"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/register_icon_eye"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    //下划线
    <TextView
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="#fff"/>

    //已有账户?立即登录
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        //空白
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        //已有账户?立即登录
        <TextView
            android:id="@+id/tv_register_ljdl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#fff"
            android:text="已有账户?立即登录"/>
    </LinearLayout>

    //注册按钮
    <Button
        android:id="@+id/btn_register"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_shape"
        android:textColor="#ff5f71"
        android:textSize="18sp"
        android:text="注册"/>


</LinearLayout>