<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    //卡片布局
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#ffffff"
        app:cardElevation="4dp"
        app:cardCornerRadius="9dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        //头像  名称  发布时间一栏
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <zjm.com.xiangmu.ui.activity.Clrcle
                android:id="@+id/img_quan_toux"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/shangpintu"/>
            <TextView
                android:id="@+id/tv_quan_nickName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:textSize="14sp"
                android:textColor="#666666"
                android:text="用户昵称"/>
            <TextView
                android:id="@+id/tv_quan_createTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textSize="10sp"
                android:textColor="#666666"
                android:text="发布时间"/>
            <TextView
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>//头像  名称  发布时间一栏

        //评论
        <TextView
            android:id="@+id/tv_quan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="#666666"
            android:text="评论"/>//评论

        //商品图片
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/img_quan_tu"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/shangpintu"/>
        </LinearLayout>//商品图片

        //点赞
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/img_quan_prise"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/btn_prise"
                android:clickable="true"/>
            <TextView
                android:id="@+id/tv_quan_prise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="#666666"
                android:text="421"/>
            <TextView
                android:layout_width="24dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>//点赞
    </LinearLayout>
    </android.support.v7.widget.CardView>//卡片布局
   

</LinearLayout>
