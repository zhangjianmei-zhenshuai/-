<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="312dp"
        android:layout_height="102dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="12sp"
        android:layout_marginTop="20dp">
        //五个按钮
        <RadioGroup
            android:id="@+id/radiogroup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#666"
                android:drawableTop="@mipmap/quanbudd_ddf"
                android:text="全部订单"/>
            <RadioButton
                android:id="@+id/radio7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#666"
                android:button="@null"
                android:drawableTop="@mipmap/daifuk_ddf"
                android:text="代付款"/>
            <RadioButton
                android:id="@+id/radio8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#666"
                android:drawableTop="@mipmap/daishouh_ddf"
                android:text="待收货"/>
            <RadioButton
                android:id="@+id/radio9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#666"
                android:drawableTop="@mipmap/daipingj_ddf"
                android:text="待评价"/>
            <RadioButton
                android:id="@+id/radio10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:button="@null"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="#666"
                android:drawableTop="@mipmap/yiwanc_ddf"
                android:text="已完成"/>
        </RadioGroup>
    </android.support.v7.widget.CardView>

    //FrameLayout
    <FrameLayout
        android:id="@+id/pager_ding"
        android:layout_width="312dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">
    </FrameLayout>

</LinearLayout>
